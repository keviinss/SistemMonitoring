<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/kanvas_NAMASANTRI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/id_NAMASANTRI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Nama Santri"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_NAMASANTRI"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtNamaSantri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik8"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="nama santri"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kanvas_KODESANTRI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_NAMASANTRI">

                <TextView
                    android:id="@+id/id_KODESANTRI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Kode Santri"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_KODESANTRI"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtKodeSantri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik7"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="kode santri"
                    android:textSize="16dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/kanvas_tgl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_KODESANTRI">

                <TextView
                    android:id="@+id/id_tgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Tanggal"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_tgl"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtTgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik11"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="Tanggal"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kanvas_amalan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_NOHP">

                <TextView
                    android:id="@+id/id_amalan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Amalan Yaumiyah"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/id_amalan"
                    android:layout_alignBaseline="@id/id_amalan"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtAmalan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titik12"
                    android:layout_margin="2dp"
                    android:padding="5dp"
                    android:text="Amalan Yaumiyah"
                    android:textSize="16dp" />
            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>