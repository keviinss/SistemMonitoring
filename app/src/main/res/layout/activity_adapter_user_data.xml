<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/kanvas_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Username"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_user"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik1"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="Username"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kanvas_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_user">

                <TextView
                    android:id="@+id/id_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Password"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_pass"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik2"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="password"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kanvas_NAMA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_pass">

                <TextView
                    android:id="@+id/id_NAMA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Nama Lengkap"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_NAMA"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik3"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="nama"
                    android:textSize="16dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/kanvas_NAMASANTRI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_NAMA">

                <TextView
                    android:id="@+id/id_NAMASANTRI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Nama Santri"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_NAMASANTRI"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtNamaSantri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik8"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="nama santri"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kanvas_KODESANTRI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_NAMASANTRI">

                <TextView
                    android:id="@+id/id_KODESANTRI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Kode Santri"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_KODESANTRI"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtKodeSantri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik7"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="kode santri"
                    android:textSize="16dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/kanvas_NOHP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_KODESANTRI">

                <TextView
                    android:id="@+id/id_NOHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="No. HP"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_NOHP"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtNoHp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik11"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="nohp"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kanvas_LEVEL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_NOHP">

                <TextView
                    android:id="@+id/id_LEVEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Level"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_LEVEL"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/txtLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik12"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="level"
                    android:textSize="16dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHapus"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_bg"
                    android:text="Hapus"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnUbah"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_bg"
                    android:text="Ubah"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>