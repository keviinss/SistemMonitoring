<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/kanvas_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Nama"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_user"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/Nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik1"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="nama"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kanvas_tanggal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_user">

                <TextView
                    android:id="@+id/id_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Tanggal"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_tanggal"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/Tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik2"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="tanggal"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kanvas_jumlah"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_pass">

                <TextView
                    android:id="@+id/id_jumlah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Jumlah"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_jumlah"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/Jumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik3"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="jumlah"
                    android:textSize="16dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/kanvas_metode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/kanvas_NAMA">

                <TextView
                    android:id="@+id/id_metode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Metode"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/titik8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_metode"
                    android:layout_marginLeft="130dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/Metode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/titik8"
                    android:layout_marginLeft="135dp"
                    android:padding="5dp"
                    android:text="metode"
                    android:textSize="16dp" />
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHapus"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_bg"
                    android:text="Hapus"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

                <!--<Button
                    android:id="@+id/btnUbah"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_bg"
                    android:text="Ubah"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />-->

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>